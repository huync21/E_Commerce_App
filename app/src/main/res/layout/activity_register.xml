<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1EAED"
    android:orientation="vertical"
    android:padding="40dp">

    <EditText
        android:id="@+id/text_view_email_register"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/my_edit_text"
        android:hint="Email" />

    <EditText
        android:id="@+id/text_view_username_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/my_edit_text"
        android:hint="User name"
        android:inputType="textPassword" />
    <EditText
        android:id="@+id/text_view_firstname_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/my_edit_text"
        android:hint="First Name"
        android:inputType="textPassword" />
    <EditText
        android:id="@+id/text_view_lastname_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/my_edit_text"
        android:hint="Last Name"
        android:inputType="textPassword" />
    <EditText
        android:id="@+id/text_view_password_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/my_edit_text"
        android:hint="Password"
        android:inputType="textPassword" />
    <EditText
        android:id="@+id/text_view_confirm_password_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/my_edit_text"
        android:hint="Retype password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/mybutton"
        android:text="Register"
        android:textAllCaps="false"
        android:textSize="25dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/text_view_go_back_login_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="Go back to login page"
        android:textSize="15dp"
        android:textStyle="bold"/>

</LinearLayout>
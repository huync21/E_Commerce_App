<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn_create_rating_activity_make_a_rating"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.MakeARatingActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_image_view_avatar_activity_make_a_rating"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/user_avatar_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name_activity_make_a_rating" />

    <TextView
        android:id="@+id/tv_user_full_name_activity_make_a_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Huy Nguyen"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/circle_image_view_avatar_activity_make_a_rating"
        app:layout_constraintTop_toTopOf="@+id/circle_image_view_avatar_activity_make_a_rating" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Leave your rating for this product:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.168"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_product_image_activity_make_a_rating"
        android:layout_width="168dp"
        android:layout_height="118dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/images" />

    <RatingBar
        android:id="@+id/ratingBar_activity_make_a_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:stepSize="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.177"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circle_image_view_avatar_activity_make_a_rating" />

    <EditText
        android:id="@+id/edit_text_make_comment_for_rating"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="27dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_text_make_rating_shape"
        android:ems="10"
        android:hint="Type in your comment on this product (This is optional)."
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar_activity_make_a_rating" />

    <TextView
        android:id="@+id/tv_product_name_activity_make_a_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_product_image_activity_make_a_rating" />

    <Button
        android:id="@+id/btn_make_a_rating_activity_make_a_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:text="Rate  "
        android:background="@drawable/mybutton"
        android:drawableRight="@drawable/ic_baseline_send_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ratingBar_activity_make_a_rating"
        app:layout_constraintTop_toTopOf="@+id/ratingBar_activity_make_a_rating" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview = "http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    cardview:cardElevation="10dp"
    cardview:cardCornerRadius="10dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="10dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_order_total_item_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Total: 20$"
            android:textSize="25sp"
            android:textStyle="bold"
            cardview:layout_constraintLeft_toLeftOf="parent"
            cardview:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tv_created_at_item_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Created at: 20/04/2022"
            android:textSize="18sp"
            android:textStyle="italic"
            cardview:layout_constraintLeft_toLeftOf="parent"
            cardview:layout_constraintTop_toBottomOf="@id/tv_order_total_item_order" />

        <TextView
            android:id="@+id/tv_status_item_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="16dp"
            android:text="Status: Delivering"
            android:textSize="20sp"
            android:textStyle="bold"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>